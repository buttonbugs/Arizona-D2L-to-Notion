{
    "manifest_version": 3,
    "name": "Arizona D2L to Notion",
    "version": "1.6.0",
    "description": "An extension that can sync your D2L course data into a Notion database.",
    "background": {
        "service_worker": "./background.js"
    },
    "icons": {
        "128": "logo/arizona.png"
    },
    "action":{
        "default_icon" : "logo/arizona.png",
        "default_popup": "popup.html",
        "default_title": "Arizona D2L to Notion"
    },
    "content_scripts": [
        {
            "matches": [
                "https://d2l.arizona.edu/*",
                "https://learn.zybooks.com/*",
                "https://www.gradescope.com/*",
                "https://*.pearson.com/*",
                "https://www.webassign.net/*"
            ],
            "js": ["./content_script.js"]
        }
    ],
    "host_permissions": [
        "https://github.com/*",
        "https://api.notion.com/*",
        "https://d2l.arizona.edu/*",
        "https://*.zybooks.com/*",
        "https://www.gradescope.com/*",
        "https://*.pearson.com/*",
        "https://www.webassign.net/*"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "cookies",
        "scripting",
        "storage"
    ]
}